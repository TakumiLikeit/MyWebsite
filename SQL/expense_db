CREATE DATABASE expensemanagement DEFAULT CHARACTER SET utf8;
USE expensemanagement;

CREATE TABLE expense (id SERIAL AUTO_INCREMENT, user_id int NOT NULL,
category_id int NOT NULL, name varchar(255) NOT NULL, price int NOT NULL,
date DATE NOT NULL, note text, create_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL,
update_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP NOT NULL);

CREATE TABLE category (id SERIAL AUTO_INCREMENT, name varchar(255) NOT NULL);

CREATE TABLE user (id SERIAL AUTO_INCREMENT, login_id varchar(255) UNIQUE NOT NULL,
name varchar(255) NOT NULL, password varchar(255) NOT NULL,
create_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL,
update_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP NOT NULL);


